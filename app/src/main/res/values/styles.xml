<resources>

    <style name="AppTheme.NoActionBar" parent="MyTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="theme1" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_set_1_primary</item>
        <item name="colorPrimaryDark">@color/color_set_1_primary_dark</item>
        <item name="colorControlActivated">@color/color_set_1_accent</item>
        <item name="colorAccent">@color/color_set_1_accent</item>
    </style>

    <style name="theme2" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_set_2_primary</item>
        <item name="colorPrimaryDark">@color/color_set_2_primary_dark</item>
        <item name="colorControlActivated">@color/color_set_2_accent</item>
        <item name="colorAccent">@color/color_set_2_accent</item>
    </style>

    <style name="theme3" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_set_3_primary</item>
        <item name="colorPrimaryDark">@color/color_set_3_primary_dark</item>
        <item name="colorControlActivated">@color/color_set_3_accent</item>
        <item name="colorAccent">@color/color_set_3_accent</item>
    </style>

    <style name="theme4" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_set_4_primary</item>
        <item name="colorPrimaryDark">@color/color_set_4_primary_dark</item>
        <item name="colorControlActivated">@color/color_set_4_accent</item>
        <item name="colorAccent">@color/color_set_4_accent</item>
    </style>

    <style name="theme5" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/color_set_5_primary</item>
        <item name="colorPrimaryDark">@color/color_set_5_primary_dark</item>
        <item name="colorControlActivated">@color/color_set_5_accent</item>
        <item name="colorAccent">@color/color_set_5_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>
