    "id": "111", 
    "name": "ಹಡಪದಪ್ಪಣ್ಣಗಳ ಪುಣ್ಯಸ್ತ್ರೀ ಲಿಂಗಮ್ಮ", 
    "vachana": {
        "7884": "ಪಶ್ಚಿಮದ ಕದವ ತೆಗೆದು ಬಚ್ಚಬರಿಯ ಬೆಳಗ ನೋಡಲೊಲ್ಲದೆ,", 
        "7885": "ಹೋಗುತ್ತ ಹೋಗುತ್ತ ಹೊಗೆಯ ಕಂಡೆ,", 
        "7886": "ಹೋಗುತ್ತ ಹೋಗುತ್ತ ಹೊಟ್ಟೆಯಡಿಯಾಯಿತ್ತು;", 
        "7887": "ಹೋಗುತ್ತ ಹೋಗುತ್ತ ಹೊಲಬುದಪ್ಪಿತ್ತು,", 
        "7888": "ಬಟ್ಟಬಯಲಿನಲ್ಲಿ ಒಂದು ಮರ ಹುಟ್ಟಿತ್ತು.", 
        "7889": "ಬಟ್ಟ ಬಯಲಲ್ಲಿ ಒಂದು ಶರದಿs ಹುಟ್ಟಿತ್ತು.", 
        "7890": "ಬಟ್ಟಬಯಲಲ್ಲಿ ಒಂದು ಮೃಗ ಹುಟ್ಟಿತ್ತು.", 
        "7891": "ನೆನೆವುತ್ತಿದೆ ಮನ; ದುರ್ವಾಸನೆಗೆ ಹರಿವುತ್ತಿದೆ ಮನ;", 
        "7892": "ಮನವ ನಿರ್ಮಲವ ಮಾಡಿಹೆನೆಂದು", 
        "7893": "ಮನವ ಗೆದ್ದೆಹೆನೆಂದು, ತನುವ ಕರಗಿಸಿ ಕಾಯವ ಮರುಗಿಸಿ,", 
        "7894": "ಮನವ ನಿಲಿಸಿಹೆನೆಂದು, ಆ ಮನದ ನೆಲೆಯ ಕಾಣದೆ,", 
        "7895": "ಹೊತ್ತು ಹೊತ್ತಿಗೆ ಮೆತ್ತಹಾಕಿ ತಿಪ್ಪೆಯಲ್ಲಿ ಕರ್ಪೂರವನರಸುವನಂತೆ,", 
        "7896": "ಮನ ಕತ್ತಲೆ, ತನು ಹಮ್ಮು, ನೆನಹು ಮರವೆ,", 
        "7897": "ಮದ ಮತ್ಸರ ಬಿಡದು, ಮನದ ಕನಲು ನಿಲ್ಲದು, ಒಡಲಗುಣ ಹಿಂಗದು.", 
        "7898": "ಮನ ಮಂಕಾಯಿತ್ತು; ತನು ಮರೆಯಿತ್ತು; ವಾಯು ಬರತಿತ್ತು.", 
        "7899": "ಮನವೆಂದಡೆ ಮರವೆಗೆ ಒಳಗುಮಾಡಿತ್ತು.", 
        "7900": "ರಸವಡೆದಂತೆ ದೆಸೆದೆಸೆಯನಾಲಿಸುವ ಮನವ", 
        "7901": "ಮನ ಮರವೆಗೆ ಮುಂದುಮಾಡಿತ್ತು.", 
        "7902": "ತನುವ ಕರಗಿಸಿ, ಹರಿವ ಮನವ ನಿಲಿಸಿ,", 
        "7903": "ಮಹಾಬೆಳಗ ನೋಡಿ ಮನವ ನಿಮ್ಮ ವಶವ ಮಾಡಿ,", 
        "7904": "ವ್ಯಾಪಾರವನೆ ಬಿಟ್ಟು ತಾಪತ್ರಯವನೆ ಹಿಂಗಿ,", 
        "7905": "ಬ್ರಹ್ಮಾಂಡದಲ್ಲಿ ಹುಟ್ಟಿದವರೆಲ್ಲ ಭವಬಂಧನಕ್ಕೊಳಗಾದರಯ್ಯಾ.", 
        "7906": "ಕರುಳು ಒಣಗಿತ್ತು ತನು ಕರಗಿತ್ತು", 
        "7907": "ತನು ನಷ್ಟವಾದಡೇನಯ್ಯಾ, ಮನನಷ್ಟವಾಗದನ್ನಕ್ಕ ?", 
        "7908": "ಮತ್ರ್ಯದಲ್ಲಿ ಹುಟ್ಟಿ ಎತ್ತಲೆಂದರಿಯದೆ, ಕತ್ತಲೆಯೊಳು ಮುಳುಗಿ,", 
        "7909": "ಮಚ್ಚಬೇಡ, ಮರಳಿ ನರಕಕ್ಕೆರಗಿ ಕರ್ಮಕ್ಕೆ ಗುರಿಯಾಗಬೇಡ.", 
        "7910": "ಅಂಗವ ಮರೆದವಂಗೆ ಲಿಂಗದ ಹಂಗೇಕೊ ?", 
        "7911": "ಅಯ್ಯಾ, ಕಿಚ್ಚಿನೊಳಗೆ ಬೆಂದ ಕಾಯಕ್ಕೆ ಅಚ್ಚುಗವುಂಟೆ ?", 
        "7912": "ಕಂಗಳ ಮುಂದಣ ಬೆಳಗ ಕಾಣದೆ, ಕಂಡಕಂಡವರ ಹಿಂದೆ ಹರಿದು,", 
        "7913": "ಕಂಡು ಕೇಳಿಹೆನೆಂಬ ದಂದುಗವ ಬಿಟ್ಟು,", 
        "7914": "ಅಯ್ಯಾ, ಈ ಮಹಾಘನವ ಕಾಂಬುದಕ್ಕೆ", 
        "7915": "ಮಾಣಿಕವ ಕಂಡವರು ತೋರುವರೆ ಅಯ್ಯಾ,", 
        "7916": "ಏರುವ ಇಳಿಯುವ ಆದಿಯ ಅನಾದಿಯನರಿದು,", 
        "7917": "ಮೂಲಪ್ರಣವವನರಿದು ಮೂಲಮಂತ್ರದೊಳಗಾಡುತ್ತ,", 
        "7918": "ಮಾಯದ ಬೊಂಬೆಯ ಮಾಡಿ, ಕಂಗಳಿಗೆ ಕಾಮನ ಬಾಣವ ಹೂಡಿ,", 
        "7919": "ಬಂಡಿಯ ಮೇಗಣ ಹೆಳವನಂತೆ ಕಂಡ ಕಂಡ ಕಡೆಗೆ ಹಲುಬಿದಡೆ,", 
        "7920": "ನಿಶ್ಚಿಂತವಾದವಂಗೆ ಮತ್ತಾರ ಹಂಗುಂಟೆ ?", 
        "7921": "ಕಂಗಳ ಮುಂದೆ ಮಾಣಿಕವಿದ್ದು ಕಾಣಲೇಕರಿಯರಯ್ಯಾ ?", 
        "7922": "ಅಂಗವೆಂದಡೆ ಲಿಂಗದೊಳಡಗಿತ್ತು", 
        "7923": "ಅಯ್ಯಾ, ನಾನು ಊರ ಮರೆದು ಆಡ ಹೋದಡೆ,", 
        "7924": "ಅಯ್ಯಾ, ಏನೂ ಇಲ್ಲದ ಬಯಲ ದೇಹಕ್ಕೆ ತಾಮಸವ ಮುಂದುಮಾಡಿ,", 
        "7925": "ಆಗದಾಗದು ಮತ್ರ್ಯದ ಮನುಜರಿಗೆ ಶಿವಸುಖ ?", 
        "7926": "ಆಸೆಯನಳಿದು, ರೋಷವ ನಿಲಿಸಿ,", 
        "7927": "ಆಸೆಯುಳ್ಳನ್ನಕ್ಕ ರೋಷ ಬಿಡದು", 
        "7928": "ಉಸುರ ಉನ್ಮನಿಗಿತ್ತು, ಶಶಿರವಿಯೊಡಗೂಡಿ,", 
        "7929": "ಒಡಕುಮಡಿಕೆಯಂತೆ ಒಡೆದುಹೋಗುವ ಹಡಿಕೆಕಾಯವ ನೆಚ್ಚಿ,", 
        "7930": "ಕಂಡಿಹೆ ಕೇಳಿಹೆನೆಂದು ಮುಂದುಗಾಣದೆ ಸಂದೇಹದಲ್ಲಿ ಮುಳುಗಿ.", 
        "7931": "ಕಂಡಿಹೆ ಕೇಳಿಹೆನೆಂಬ ದ್ವಂದ್ವವ ಹಿಂಗಿ,", 
        "7932": "ಕತ್ತಲೆ ಬೆಳಗೆಂಬುದಿಲ್ಲ ನಿತ್ಯನಾದವಂಗೆ,", 
        "7933": "ಕಾಯವೆಂಬ ಕದಳಿಯನೆ ಹೊಕ್ಕು, ನೂನ ಕದಳಿಯ ದಾಂಟಿ,", 
        "7934": "ಕದಳಿಯ ಬನದೊಳಗಿರುವ ಲಿಂಗವ ಅರಸಿದಡೆ ಕಾಣಬಾರದು.", 
        "7935": "ಕೈಲಾಸ ಮತ್ರ್ಯಲೋಕ ಎಂಬರು.", 
        "7936": "ಜಗದೊಳಗೆ ಹುಟ್ಟಿ ಜಗದಪ್ರಪಂಚ ಹಿಂಗಿ,", 
        "7937": "ತನ್ನ ತಾನರಿಯದೆ ಅನ್ಯರಿಗೆ ಬೋಧೆಯ ಹೇಳುವ", 
        "7938": "ತುಂಬಿದ ಕೆರೆಗೆ ಅಂಬಿಗ ಹರಿಗೋಲ ಹಾಕಿ ಬಲೆಯ ಬೀಸಿದಂತೆ,", 
        "7939": "ನಿಶ್ಚಿಂತ ನಿರಾಳದಲ್ಲಿ ಆಡುವ ಮಹಾದೇವನ ಕರ್ತೃವೆಂದರಿದ ಕಾರಣದಿಂದ,", 
        "7940": "ನೋಡುವ ನೋಟ ಕೂಡಿ ಬಯಲಲ್ಲಿ ಸಿಕ್ಕಿ,", 
        "7941": "ಮತ್ರ್ಯದ ಮನುಜರು ತಾವು ಸತ್ಯರು ಸತ್ಯರು ಎನುತಿಪ್ಪರು,", 
        "7942": "ಮತ್ರ್ಯದ ಮನುಜರು ಸತ್ತರೆಲ್ಲ ?", 
        "7943": "ಸಾಯದ ಮುಂಚೆ ಸತ್ತಹಾಗೆ ಇರುವರು.", 
        "7944": "ಹುಟ್ಟಿದ ಮನುಜರೆಲ್ಲಾ ಬಂದ ಬಟ್ಟೆಯ ನೋಡಿ", 
        "7945": "ಹೊತ್ತು ಹೊತ್ತಿಗೆ ಕಿಚ್ಚನೆಬ್ಬಿಸಿದಡೆ ಕಲೆ ಉರಿದುದೆಂದು,", 
        "7946": "ಹೊಸ್ತಿಲೊಳಗಿರಿಸಿದ ಜ್ಯೋತಿಯಂತೆ", 
        "7947": "ಕನಿಷ್ಠದಲ್ಲಿ ಹುಟ್ಟಿದೆ, ಉತ್ತಮದಲ್ಲಿ ಬೆಳೆದೆ,", 
        "7948": "ಅಯ್ಯಾ, ನಾ ಹುಟ್ಟುವಾಗ ಬಟ್ಟಬಯಲೆ ಗಟ್ಟಿಯಾಯಿತ್ತು.", 
        "7949": "ಅಯ್ಯಾ, ನರರೊಳು ಹುಟ್ಟಿ, ಮರಹಿನೊಳಗೆ ಬಿದ್ದವಳ ತಂದು,", 
        "7950": "ಅಯ್ಯಾ, ನಾ ಮತ್ರ್ಯದಲ್ಲಿ ಹುಟ್ಟಿ ಕಷ್ಟಸಂಸಾರಿ ಎನಿಸಿಕೊಂಡೆ.", 
        "7951": "ಏನೇನು ಇಲ್ಲದಾಗ ನೀವಿಲ್ಲದಿದ್ದಡೆ ನಾನಾಗಬಲ್ಲೆನೆ ಅಯ್ಯಾ ?", 
        "7952": "ತನುವೆಂಬ ಹುತ್ತಕ್ಕೆ ಮನವೆಂಬ ಸರ್ಪ ಆವರಿಸಿ,", 
        "7953": "ಪೃಥ್ವಿಯನೆ ಆದಿಯ ಮಾಡಿ, ಅಪ್ಪುವಿನಲ್ಲಿ ಗೋಡೆಯನಿಕ್ಕಿ,", 
        "7954": "ನಾಮ ರೂಪಿಲ್ಲದ ಘನವ ನಾಮರೂಪಿಂಗೆ ತಂದಿರಯ್ಯಾ.", 
        "7955": "ತನುವೆಂಬ ಹುತ್ತದಲ್ಲಿ ಮನವೆಂಬ ಸರ್ಪ ಹೆಡೆಯನುಡುಗಿಕೊಂಡಿರಲು", 
        "7956": "ಒಂದು ಹುತ್ತಕ್ಕೆ ಒಂಬತ್ತು ಬಾಗಿಲು.", 
        "7957": "ಒಂದು ಊರಿಗೆ ಒಂಬತ್ತು ಬಾಗಿಲು.", 
        "7958": "ತನುವೆಂಬ ರಾಜ್ಯಕ್ಕೆ ಮನವೆಂಬ ಅರಸು.", 
        "7959": "ಬಯಲ ದೇಹದಲ್ಲಿ ಒಂದು ತೊಲಗದ ಕಂಬವ ಕಂಡೆ.", 
        "7960": "ಕಾಯವೆಂಬ ಕದಳಿಯ ಹೊಕ್ಕು ಜೀವಪರಮರ ನೆಲೆಯನರಿದು,", 
        "7961": "ಕಾಣಬಾರದ ಕದಳಿಯಲೊಂದು ಮಾಣಿಕ ಹುಟ್ಟಿತ್ತು.", 
        "7962": "ನಾನೊಂದು ಹಾಳೂರಿಗೆ ಹೋಗುತ್ತಿರಲು, ಆ ಹಾಳೂರ ಹೊಕ್ಕಡೆ,", 
        "7963": "ನಿರಾಳಲಿಂಗವ ಕಾಂಬುದಕ್ಕೆ", 
        "7964": "ತನು ಕರಗಿತ್ತು, ಮನ ನಿಂದಿತ್ತು, ಉಲುಹು ಅಡಗಿತ್ತು,", 
        "7965": "ನಿರ್ಮಳವಾದ ದೇಹದಲ್ಲಿ ಇನ್ನೊಂದ ಕಲ್ಪಿಸಲುಂಟೆ ?", 
        "7966": "ಅಯ್ಯಾ, ನಿಮ್ಮ ಚರಣವಿಡಿದು ಮನವ ನಿಲಿಸಿದೆ,", 
        "7967": "ಕರಗವ ಸುಟ್ಟೆ, ಕಂದಲವನೊಡದೆ,", 
        "7968": "ನರರ ಬೇಡೆನು, ಸುರರ ಹಾಡೆನು, ಕರಣಂಗಳ ಹರಿಯಬಿಡೆನು,", 
        "7969": "ಬಚ್ಚಬರಿಯ ಬೆಳಗ ನೋಡಿಹೆನೆಂದು,", 
        "7970": "ಈ ಪರಂಜ್ಯೋತಿ ಪ್ರಕಾಶವಾದ ಬೆಳಗ", 
        "7971": "ಅಯ್ಯಾ, ಅದೇನು ಕಾರಣವೆಂದಡೆ,", 
        "7972": "ಅಯ್ಯಾ ನಾನು ಬಂದ ಬಂದ ಭವಾಂತರದಲ್ಲಿ", 
        "7973": "ಅಯ್ಯಾ, ನಾ ಕಾಬುದಕ್ಕೆ ನನ್ನ ಶಕ್ತಿಯಲ್ಲ", 
        "7974": "ಎನ್ನ ಸತ್ಯಳ ಮಾಡಿ ನಿತ್ಯವ ತೋರಿ,", 
        "7975": "ಅದೇನು ಕಾರಣವೆಂದಡೆ,", 
        "7976": "ಕಾಮವಿಲ್ಲ, ಕ್ರೋಧವಿಲ್ಲ, ಲೋಭವಿಲ್ಲ,", 
        "7977": "ಈ ಮಹಾದೇವನ ಸ್ತೋತ್ರವ ಮಾಡುವುದಕ್ಕೆ ಜಿಹ್ವೆ ಮೆಟ್ಟದು.", 
        "7978": "ಘಟವೆಂಬ ಮಠದೊಳಗೆ ಮನವೆಂಬ ಮರ ಹುಟ್ಟಿತ್ತು.", 
        "7979": "ಬೆಟ್ಟ ಬೆಂದಿತ್ತು, ಬಿದಿರುಗಣ್ಣ ಒಡೆಯಿತ್ತು", 
        "7980": "ಮರನನೇರಿದೆ, ಬೇರ ಸವರಿದೆ,", 
        "7981": "ನಿಮ್ಮ ಪಾದವಿಡಿದು ಮನ ಪಾವನವಾಯಿತ್ತು", 
        "7982": "ತುಂಬಿದ ಮನೆಯ ಹೊಕ್ಕಡೆ ದಂದಳವಾಯಿತ್ತು.", 
        "7983": "ದಾರಿವಿಡಿದು ಬರಲು ಮುಂದೆ ಸರೋವರವ ಕಂಡೆ.", 
        "7984": "ದಾರಿವಿಡಿದು ಬರಲು ಮುಂದೆ ಸರೋವರವ ಕಂಡೆ.", 
        "7985": "ನೋಟವನಿಟ್ಟು ನೋಡುತಿರಲು ಮೂರಾಯಿತ್ತು.", 
        "7986": "ನೆನೆದೆಹೆನೆಂದಡೆ ಏನ ನೆನೆವೆನಯ್ಯಾ", 
        "7987": "ನೋಡುವೆನೆಂದಡೆ ನೋಟವಿಲ್ಲz ಕೇಳುವೆನೆಂದಡೆ ಕಿವಿಯಿಲ್ಲ", 
        "7988": "ಆಧಾರವ ಬಲಿಯೆ ಬೇಗೆವರಿಯಿತ್ತು", 
        "7989": "ಸಹಸ್ರದಳ ಕಮಲವ ಸೂಸದೆ ಮೇಲುಕಟ್ಟು ಕಟ್ಟಿ,", 
        "7990": "ಸಾಸಿರದಳಕಮಲವೆಂದಡೆ ಸೂಸಿಕೊಂಡಿರುವ ಮನ.", 
        "7991": "ಅಂತರಂಗ ಬಹಿರಂಗ ಶುದ್ಭವಿಲ್ಲದೆ ನುಡಿವರು ಸಂತೆಯ ಸೂಳೆಯರಂತೆ.", 
        "7992": "ಜಂಗಮವೆ ಗುರು, ಜಂಗಮವೆ ಲಿಂಗ, ಜಂಗಮವೆ ಪ್ರಾಣವೆಂದಡೆ,", 
        "7993": "ಬಸವೇಶ್ವರ ಚೆನ್ನಬಸವೇಶ್ವರ ಮಡಿವಾಳಯ್ಯ ಅಲ್ಲಮಪ್ರಭು", 
        "7994": "ಜಂಗಮವೆ ಜಗತ್ಪಾವನವಯ್ಯಾ.", 
        "7995": "ಮುಕ್ತಿಯ ಪಥವನರಿವುದಕ್ಕೆ ತತ್ವದ ಭಿತ್ತಿಯ ಕಾಣಬೇಕು", 
        "7996": "ಸಾಕಯ್ಯಾ, ಲೋಕದ ಹಂಗು ಹರಿಯಿತ್ತು", 
        "7997": "ಶರಣರೈಕ್ಯರೆಂದು ನುಡಿದಾಡುವರು,"
    }
}